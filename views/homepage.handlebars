<section class="hero is-primary is-normal has-background-black">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-grey has-text-left">
        WELCOME TO TECH BLOG!
      </h1>
      <br>
      <h2 class="subtitle has-text-grey has-text-left">
        Please browse our existing posts and add your own! We are here for you!
      </h2>
    </div>
  </div>
</section>

<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    {{> post-info post }}
  </li>
  {{/each}}
</ol>